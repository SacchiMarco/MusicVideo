@{
    ViewBag.Title = "Costumers";
    Layout = "~/Views/Shared/_Layout.cshtml";

    

}

<h2>Costumers</h2>



@if (Model.Count > 0)
{
    <ul class="list-group">

        @foreach (var i in Model)
        {
            
            <li class="list-group-item">@Html.ActionLink( (string) i.Name,
                                            "Costumer", 
                                            "Costumers",
                                            new{id = i.Id},
                                            null)</li>
        }
    </ul>
}
else
{
    <p>No Costumer yet!</p>
}



