@model IEnumerable<Vidly.Models.Videos>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="col-md-12 backLink"><a href="@Url.Action("Movies", "Movies")">Back to Movies</a></div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="col">
                <p>Kategorie</p>
            </th>
            <th>
                <p>Künstler</p>
            </th>
            <th>
                <p>Titel</p>
            </th>
            <th>
                <p>Dateigrösse</p>
            </th>
            <th>
                <p>Qualität</p>
            </th>
            <th>
                <p>Anmerkung</p>
            </th>
            <th>
                <p>Benotung</p>
            </th>
            <th>
                <p>Jahr</p>
            </th>
            <th>
                <p>Album</p>
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategorien.a_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kuenstler.k_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.titel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateigroesse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.qualitaet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.anmerkung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.benotung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.erscheinungsjahr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.album)
                </td>
              
            </tr>
        </tbody>
    }

</table>